<?xml version="1.0" encoding="UTF-8"?>
<project name="ADT" default="all" basedir="..">
	<property name="assemblerPath" value="C:/dev/xassm/cc65/bin" />
	<property name="versionString" value="1.3.0" />
	<property name="dosVersionString" value="130" />
	<property name="dosDistName" value="adt${dosVersionString}" />
	<property name="projdir" value="." />
	<property name="builddir" value="${basedir}/build" />
	<property name="acJar" value="${builddir}/AppleCommander-1.3.4b-ac.jar" />
	<!-- TODO: build in a dumper
	<taskdef name="appleDump" classname="AppleDump" classpath="${builddir}"/>
	-->
	<target name="all" depends="clean, assemble, builddsk">
	</target>

	<target name="clean">
		<!--
		Clean up everything
		-->
		<delete file="${projdir}/sscgs/src/ADT" />
		<delete file="${projdir}/sscgs/${dosDistName}.dsk" />
		<delete file="${projdir}/sscgs/adt.dmp" />
		<delete>
			<fileset dir="${projdir}/sscgs/src" includes="**/*.o"/>
			<fileset dir="${projdir}/sscgs/src" includes="**/*.map"/>
			<fileset dir="${projdir}/sscgs/src" includes="**/*.lst"/>
		</delete>
	</target>

	<target name="assemble" depends="clean">
		<!--
		Assemble and link the ADT source
		-->
		<exec dir="${projdir}/sscgs/src" executable="${assemblerPath}/cl65">
			<arg line="-l -t none adt.s" />
		</exec>
		<!--
		Make a dumpable version
		<appleDump infilename="${builddir}/ADT" outfilename="${builddir}/adt.dmp" applename="ADT" startaddrhex="803" numbyteswide="8" />
		-->
	</target>

	<target name="builddsk">
		<!--
		Start a .dsk image containing the release number
		-->
		<copy file="${builddir}/ADTBase.dsk" tofile="${projdir}/sscgs/${dosDistName}.dsk" />
		<!--
		Put the assembled DOS ADT program on the .dsk image
		-->
		<exec dir="${projdir}/sscgs" executable="java" input="${projdir}/sscgs/src/ADT">
			<arg line="-jar ${acJar} -p ADT bin 2051 ${dosDistName}.dsk" />
		</exec>
	</target>

</project>
